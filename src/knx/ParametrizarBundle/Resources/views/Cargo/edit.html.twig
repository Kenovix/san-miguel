			}else{

				$('#gstCargo_tipoSer').removeAttr('disabled');
				$('#gstCargo_tipoProc').attr('disabled', 'disabled');
				$('#gstCargo_tipo_cons').attr('disabled', 'disabled');
			}
		});
	</script>
{% endblock %}