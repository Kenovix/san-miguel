{% extends "::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('ParametrizarBundle:Builder:superAdminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Información de la contratación{% endblock %}

{% block msg %}
	{% if app.session.hasFlash('ok') %}
	    <div class="alert alert-success">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>{{ app.session.flash('ok') }}</span>
	    </div>
	{% elseif app.session.hasFlash('info') %}
		<div class="alert alert-info">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>{{ app.session.flash('info') }}</span>
	    </div>
	{% elseif app.session.hasFlash('error') %}
		<div class="alert alert-error">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>{{ app.session.flash('error') }}</span>
	    </div>
	{% endif %}
{% endblock %}

{% block cuerpo %}

	<table class="table">
        <tbody>
        	<tr>
                <td><strong>Número de contrato</strong></td>
                <td>{{ contratado.contrato.numero }}</td>
                <td><strong>Actividad</strong></td>
                <td>{{ contratado.imv.nombre }}</td>
            </tr>
            <tr>
                <td><strong>Precio</strong></td>
                <td>
                	<strong>${{ contratado.precio | number_format(0,',','.') }}</strong>
                </td>
                <td><strong>Estado</strong></td>
                <td>{{ contratado.estado }}</td>
            </tr>
            
            <tr>
                <td><strong>Observación</strong></td>
                <td>{{ contratado.observacion }}</td>
            </tr>    
        </tbody>
    </table>

	<div class="btn-group">
	    <a href="{{ path('imv_contrato_edit', {'contrato': contratado.contrato.id, 'imv': contratado.imv.id}) }}" class="btn btn-primary">Modificar</a>
	    <a href="{{ path('contrato_show', {'contrato': contratado.contrato.id }) }}" class="btn">Volver</a>
    </div>
{% endblock %}