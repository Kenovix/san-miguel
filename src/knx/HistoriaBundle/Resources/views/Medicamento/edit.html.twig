{% extends "::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('HistoriaBundle:Builder:HistoriaMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Detalle Medicamento{% endblock %}

{% block msg %}
	{% if app.session.hasFlash('ok') %}
	    <div class="alert alert-success">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>{{ app.session.flash('ok') }}</span>
	    </div>
	{% elseif app.session.hasFlash('info') %}
		<div class="alert alert-info">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>{{ app.session.flash('info') }}</span>
	    </div>
	{% elseif app.session.hasFlash('error') %}
		<div class="alert alert-error">
	    	<button data-dismiss="alert" class="close" type="button">×</button>
	        <span>{{ app.session.flash('error') }}</span>
	    </div>
	{% endif %}
{% endblock %}

{% block cuerpo %}

	<form action="{{ path('medicamento_update',{'medicamento':medicamento.id}) }}" class="form-horizontal" method="post" {{ form_enctype(edit_form) }}>
	    <fieldset>
	    	<legend>Datos del medicamento</legend>
	    	    
				<div class="control-group">
	    	    	{{ form_label(edit_form.principioActivo) }}
	    	    	<div class="controls">
						{{ form_errors(edit_form.principioActivo) }}
						{{ form_widget(edit_form.principioActivo,{ 'attr': {'class': 'input-xxlarge'} }) }}
					</div>
	    	    </div>		    	
				<div class="control-group"> 
					{{ form_label(edit_form.concentracion) }}
					<div class="controls">
						{{ form_errors(edit_form.concentracion) }}
						{{ form_widget(edit_form.concentracion,{ 'attr': {'class': 'input-small'} }) }}
					</div>
	    	    </div>											
				<div class="control-group">
					{{ form_label(edit_form.presentacion) }}
					<div class="controls">
						{{ form_errors(edit_form.presentacion) }}								
						{{ form_widget(edit_form.presentacion,{ 'attr': {'class': 'input-medium'} }) }}
					</div>
	    	    </div>
	    	    <div class="control-group">
					{{ form_label(edit_form.posologia) }}
					<div class="controls">
						{{ form_errors(edit_form.posologia) }}								
						{{ form_widget(edit_form.posologia,{ 'attr': {'class': 'input-xxlarge'} }) }}
					</div>
	    	    </div>
	    	    <div class="control-group">
					{{ form_label(edit_form.estado) }}
					<div class="controls">
						{{ form_errors(edit_form.estado) }}								
						{{ form_widget(edit_form.estado) }}
					</div>
	    	    </div>
	    	    
			{{ form_rest(edit_form) }}
		   
			<div class="form-actions">
				<input class="btn btn-primary" name="guardar" type="submit" value="Modificar" />
			    <a href="{{ path('medicamento_list') }}" class="btn btn-danger">Cancelar</a>
			</div>
		</fieldset>
	</form>
{% endblock %}